{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-opengl",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",

                "src/main.cpp",
                "src/glad.c",

                "-Iinclude",
                "-Llib",
                "-L/opt/homebrew/lib",

                "-lglfw3",
                "-lfftw3",

                "-framework", "Cocoa",
                "-framework", "IOKit",
                "-framework", "CoreFoundation",
                "-framework", "CoreGraphics",
                "-framework", "OpenGL",

                "-o", "opengl_bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$clang"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
